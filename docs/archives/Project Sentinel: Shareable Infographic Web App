    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const vibrantPalette = ['#00F5D4', '#9B5DE5', '#F15BB5', '#FEE440', '#00CCBF'];
            const textColor = '#E5E7EB';

            const wrapLabel = (label) => {
                const maxLength = 16;
                if (typeof label !== 'string' || label.length <= maxLength) {
                    return label;
                }
                const words = label.split(' ');
                const lines = [];
                let currentLine = '';
                for (const word of words) {
                    if ((currentLine + word).length > maxLength) {
                        lines.push(currentLine.trim());
                        currentLine = '';
                    }
                    currentLine += word + ' ';
                }
                lines.push(currentLine.trim());
                return lines;
            };
            
            const tooltipTitleCallback = (tooltipItems) => {
                const item = tooltipItems[0];
                let label = item.chart.data.labels[item.dataIndex];
                if (Array.isArray(label)) {
                  return label.join(' ');
                } else {
                  return label;
                }
            };
            
            const defaultChartOptions = {
                maintainAspectRatio: false,
                responsive: true,
                plugins: {
                    legend: {
                        position: 'bottom',
                        labels: {
                            color: textColor,
                            font: {
                                size: 12
                            }
                        }
                    },
                    tooltip: {
                        callbacks: {
                            title: tooltipTitleCallback
                        },
                        backgroundColor: '#1A1A2E',
                        titleColor: textColor,
                        bodyColor: textColor,
                        borderColor: '#33334A',
                        borderWidth: 1
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: { color: textColor, font: { size: 12 } },
                        grid: { color: 'rgba(229, 231, 235, 0.1)' }
                    },
                    x: {
                        ticks: { color: textColor, font: { size: 12 }, maxRotation: 0, minRotation: 0 },
                        grid: { display: false }
                    }
                }
            };
            
            const competitorCtx = document.getElementById('competitorChart').getContext('2d');
            const competitorData = {
                labels: ['Automation Bots', 'High-End Intelligence', 'Exchange AIs', 'AI Signal Providers', 'Project Sentinel'],
                datasets: [
                    {
                        label: 'Execution',
                        data: [9, 2, 7, 3, 5],
                        backgroundColor: vibrantPalette[0]
                    },
                    {
                        label: 'Intelligence',
                        data: [3, 9, 6, 8, 10],
                        backgroundColor: vibrantPalette[1]
                    },
                    {
                        label: 'Unbiased',
                        data: [8, 8, 1, 7, 10],
                        backgroundColor: vibrantPalette[2]
                    },
                     {
                        label: 'Explainability',
                        data: [2, 3, 2, 2, 10],
                        backgroundColor: vibrantPalette[3]
                    }
                ]
            };
            new Chart(competitorCtx, {
                type: 'bar',
                data: competitorData,
                options: {
                    ...defaultChartOptions,
                    scales: {
                        x: { stacked: true, ticks: { color: textColor, font: { size: 12 } }, grid: { display: false } },
                        y: { stacked: true, ticks: { color: textColor, font: { size: 12 } }, grid: { color: 'rgba(229, 231, 235, 0.1)' }, max: 40 }
                    },
                    plugins: { ...defaultChartOptions.plugins, tooltip: { ...defaultChartOptions.plugins.tooltip, mode: 'index', intersect: false } }
                }
            });

            const apiCostCtx = document.getElementById('apiCostChart').getContext('2d');
            const apiCostData = {
                labels: [wrapLabel('Dune Analytics API'), wrapLabel('Nansen Professional'), wrapLabel('Glassnode Advanced')],
                datasets: [{
                    label: 'Estimated Monthly API Cost ($)',
                    data: [849, 999, 833],
                    backgroundColor: [vibrantPalette[0], vibrantPalette[1], vibrantPalette[2]],
                    borderColor: '#1A1A2E',
                    borderWidth: 2
                }]
            };
            new Chart(apiCostCtx, {
                type: 'doughnut',
                data: apiCostData,
                options: {
                    ...defaultChartOptions,
                    scales: {
                        y: { display: false },
                        x: { display: false }
                    }
                }
            });
        });
    </script>
